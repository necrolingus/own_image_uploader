<div class="container">
    <h1>Upload Image</h1>

    <form id="upload-form" method="POST" enctype="multipart/form-data">
        <div>
            <label for="upload-secret">Secret</label>
            <input type="password" name="upload-secret" id="upload-secret" placeholder="Enter your secret..."
                required />
        </div>

        <div>
            <label for="delete-after-days">Delete After (Days)</label>
            <input type="number" name="delete-after-days" id="delete-after-days" placeholder="Number of days..."
                required />
        </div>

        <div class="file-input-wrapper">
            <label class="file-input-label" for="image-input">
                <span class="file-icon">ğŸ“</span>
                <span class="file-text">Choose an image or drag it here</span>
                <span class="file-name" id="file-name-display"></span>
            </label>
            <input type="file" name="image" id="image-input" required />
        </div>

        <button type="submit">Upload</button>
    </form>

    <div id="response-message">
        <span id="response-text"></span>
        <br>
        <button id="copy-btn" style="display: none;" onclick="copyToClipboard()">Copy Link</button>
    </div>
</div>